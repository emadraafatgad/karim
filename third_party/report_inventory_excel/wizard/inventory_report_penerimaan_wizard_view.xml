<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_excel_penerimaan_report_wiz" model="ir.ui.view">
        <field name="name">Inventory Excel Report Penerimaan</field>
        <field name="model">inventory.excel.penerimaan.export.summary</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Excel Export">
               <group cospan="2" col="2">
                    <field name="name" invisible="1"/>
                    <h4>Click On Link To Download Xls File: &#160;<br/><br/><field name="file" filename="name" nolabel="1"/></h4>
                </group>
                <footer>
                    <button special="cancel" string="Cancel" colspan="2" />
                </footer>
            </form>
        </field>
    </record>

    <record id="view_inventory_export_penerimaan_report_wiz" model="ir.ui.view">
        <field name="name">Inventory Excel Penerimaan Export Wizard</field>
        <field name="model">inventory.export.penerimaan.report.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="View Inventory Report Export">
                <group col="8" colspan="6">
                    <field name="date_start" required="1" />
                    <field name="date_end" required="1" />
                    <field name="export_report" required="1" invisible="0"/>
                </group>
                <footer>
                    <button name="print_inventory_preview_report" string="Preview" type="object" colspan="2" class="oe_highlight" icon="fa-search-plus"/> 
                    <button name="print_inventory_export_report" string="Export" type="object" colspan="2" class="oe_highlight" icon="fa-file-excel-o"/> 
                    <button special="cancel" string="Cancel" colspan="2" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_print_penerimaan_inventory_report" model="ir.actions.act_window">
        <field name="name">Penerimaan Barang</field>
        <field name="res_model">inventory.export.penerimaan.report.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem action="action_print_penerimaan_inventory_report"
            id="menu_inventory_penerimaan_reports_export_file"
            parent="stock.menu_warehouse_report" sequence="1" />
</odoo>